@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-primary" @onclick="DecrementCount">Click me to see minus</button>
<p></p>
<input @bind="DecrementAmount" type="number" id="UserInput" name="UserInput" size="10">
<label for="UserInput">You Entered: @DecrementAmount</label>

@code {
    private int currentCount = 0;

    [Parameter]
    public int IncrementAmount { get; set; } = 1;

    [Parameter]
    public int DecrementAmount { get; set; } = 1;
    private void IncrementCount()
    {
        currentCount += IncrementAmount;
    }
    private void DecrementCount()
    {
        currentCount -= DecrementAmount;
    }
}
